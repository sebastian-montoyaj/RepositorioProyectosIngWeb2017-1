<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<!-- Prpiedades necesarias para establecer la conexion -->
    	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    	<property name="connection.url">jdbc:mysql://localhost:3306/sebasBD</property>
    	<property name="connection.username">root</property>
    	<property name="connection.password">root</property>
    	<!-- La propiedad dialect nos permite incarle al framework bajo que lenguaje de BD vamos a hablar -->
    	<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    	<!-- Esta propiedad nos permite ver los mensajes sql por consola -->
    	<property name="show_sql">true</property>
    </session-factory>
</hibernate-configuration>
